<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edccorp.pokedex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ico_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.PokedexActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".Activities.ItemsActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".Activities.RegionActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".Activities.EggActivity"
            android:screenOrientation="locked" />
        <activity android:name=".Activities.StatActivity"
            android:screenOrientation="locked"/>
    </application>

</manifest>